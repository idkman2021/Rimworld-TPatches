<Patch>
    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>carnap2.TPatches</modId>
        <key>DocWorld_DesignationCategories</key>
        <defaultValue>true</defaultValue>
        <caseTrue>
            <Operation Class="XmlExtensions.OptionalPatch">
                <modId>carnap2.TPatches</modId>
                <key>DocWorld_DesignationDubsBadHygiene</key>
                <defaultValue>false</defaultValue>
                <caseTrue>


                    <!--Move items to Floors, Power, Production, Security, Joy, Culinary, Temperature, and Structure tab-->
                    <Operation Class="XmlExtensions.FindMod">
                        <mods>
                            <li>Dubs Bad Hygiene</li>
                        </mods>
                        <caseTrue>
                            <!--Husbandry-->

                            <!--Misc-->
                            <Operation Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="FireSprinkler"]/designationCategory</xpath>
                                <value>
                                    <designationCategory>Misc</designationCategory>
                                </value>
                            </Operation>
                            <!--Structure-->
                            <Operation Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="ToiletStallDoor"]</xpath>
                                <value>
                                    <designationCategory>Structure</designationCategory>
                                </value>
                            </Operation>
                            <!--Temperature-->
                            <Operation Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[@Name="BasedHeating" or defName="SolarHeater"]</xpath>
                                <value>
                                    <designationCategory>Temperature</designationCategory>
                                </value>
                            </Operation>
                            <Operation Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[@Name="BaseAircon"  or defName="airPipe" or defName="AirConOutdoorUnit" or defName="CeilingFan" or defName="CeilingFanS"]/designationCategory</xpath>
                                <value>
                                    <designationCategory>Temperature</designationCategory>
                                </value>
                            </Operation>
                            <Operation Class="XmlExtensions.OptionalPatch">
                                <modId>carnap2.TPatches</modId>
                                <key>DocWorld_DesignationCategoriesHudbandry</key>
                                <defaultValue>true</defaultValue>
                                <caseTrue>
                                    <Operation Class="PatchOperationReplace">
                                        <xpath>/Defs/ThingDef[defName="IrrigationSprinkler" or defName="BiosolidsComposter"]/designationCategory</xpath>
                                        <value>
                                            <designationCategory>DZ_Husbandry</designationCategory>
                                        </value>
                                    </Operation>
                                </caseTrue>
                                <caseFalse></caseFalse>
                            </Operation>
                        </caseTrue>
                    </Operation>


                </caseTrue>
                <caseFalse />
            </Operation>
        </caseTrue>
    </Operation>
</Patch>