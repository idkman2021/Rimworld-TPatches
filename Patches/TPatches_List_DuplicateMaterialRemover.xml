<?xml version="1.0" encoding="utf-8"?>
<Patch>


    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>carnap2.TPatches</modId>
        <key>TPatchesDMR</key>
        <defaultValue>false</defaultValue>
        <caseTrue>

            <Operation Class="XmlExtensions.OptionalPatch">
                <modId>carnap2.TPatches</modId>
                <key>TPatchesLogging</key>
                <defaultValue>false</defaultValue>
                <caseTrue>
                    <Operation Class="XmlExtensions.Log">
                        <text>Stopwatch: DMR</text>
                    </Operation>
                    <Operation Class="XmlExtensions.StopwatchStart"/>
                </caseTrue>
            </Operation>

            <!-- Expanded Materials - Plastics / Materials+ -->
            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>VMEu_PolyesterCloth</li>
                    <li>AM_Polyester</li>
                </arguments>
            </Operation>

            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>VMEu_PlasticPellets_TierOne</li>
                    <li>AM_MixedPlastic</li>
                </arguments>
            </Operation>

            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>VMEu_DarkOil</li>
                    <li>AM_BioOil</li>
                </arguments>
            </Operation>


            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>OilBarrel</li>
                    <li>AM_CrudeOil</li>
                </arguments>
            </Operation>


            <!-- rename concrete to reinforced concrete -->
            <Operation Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <li Class="PatchOperationTest">
                        <xpath>/Defs/ThingDef[defName="Stuff_RefConcreteAM"]</xpath>
                    </li>
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="ConcreteSlab"]/label</xpath>
                        <value>
                            <label>reinforced concrete slabs</label>
                        </value>
                    </li>
                </operations>
            </Operation>

            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>ConcreteSlab</li>
                    <li>Stuff_RefConcreteAM</li>
                </arguments>
            </Operation>

            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>VMEu_Coal</li>
                    <li>AM_CokeCoal</li>
                </arguments>
            </Operation>

            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>VMEu_Charcoal</li>
                    <li>AM_Coal</li>
                </arguments>
            </Operation>

            <Operation Class="XmlExtensions.ApplyPatch">
                <patchName>carnap2TPatchesDuplicateMaterialRemoverDef</patchName>
                <arguments>
                    <li>VMEu_Concrete</li>
                    <li>Stuff_ConcreteAM</li>
                </arguments>
            </Operation>

            <Operation Class="XmlExtensions.OptionalPatch">
                <modId>carnap2.TPatches</modId>
                <key>TPatchesLogging</key>
                <defaultValue>false</defaultValue>
                <caseTrue>
                    <Operation Class="XmlExtensions.StopwatchStop"/>
                </caseTrue>
            </Operation>


        </caseTrue>
        <caseFalse></caseFalse>
    </Operation>


</Patch>